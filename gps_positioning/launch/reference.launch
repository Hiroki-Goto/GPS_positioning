<?xml version="1.0"?>

<launch>
		<arg name="mapfile" default="$(find create_gps_position)/default/mymap.yaml"/>
		<arg name="gps_data_file" default="$(find create_gps_position)/gps_data/gps_data.yaml"/>

		<node name="map_server" pkg="map_server" type="map_server" args="$(arg mapfile)"/>
		<node name="table_reference" pkg="create_gps_position" type="table_reference" output="screen">
				<param name="filename" value="$(arg gps_data_file)"/>
		</node>

		<node pkg="rviz" type="rviz" name="rviz" args="-d $(find create_gps_position)/rviz_cfg/table_reference.rviz"/>
</launch>
